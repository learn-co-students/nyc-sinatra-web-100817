<form action="/figures/<%= @figure.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input type="text" name="figure[name]" id="figure_name" value=<%= @figure.name %> />
  <% Title.all.each do |t| %>
    <input type="checkbox" name="figure[title_ids][]" value=<%= t.id %> id="title_<%= t.id %>" <%='checked' if @figure.titles.include?(t) %>><%= t.name %></input>
  <% end %>
  <input type="text" name="title[name]" id="new_title" />
  <% Landmark.all.each do |l| %>
    <input type="checkbox" name="figure[landmark_ids][]" value=<%= l.id %> id="landmark_<%= l.id %>" <%='checked' if @figure.landmarks.include?(l) %>><%= l.name%></option>
  <% end %>
  <input type="text" name="landmark[name]" id="new_landmark" />
  <input type="submit" value="Edit Figure" />
</form>